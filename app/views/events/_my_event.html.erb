<div class="col-md-6">
  <%= link_to edit_event_path(event) do %>
    <div class="card">
      <img class="card-img-top" src="<%= event.hero_image_url %>">
      <div class="card-block">
        <h4 class="card-title"><%= event.name %></h4>
        <p class="card-text">
          <%= truncate(event.short_description, length: 100) %>
        </p>
      </div>
    </div>
  <% end %>
</div>
